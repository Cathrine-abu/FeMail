<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/trash_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_trash"
            android:layout_marginStart="8dp"
            android:contentDescription="trash" />

        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_rounded_more_horiz"
            android:layout_marginStart="8dp"
            android:contentDescription="menu"/>
    </LinearLayout>

    <!-- Subject -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/view_mail_subject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Subject goes here"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/view_mail_star"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:contentDescription="Star"
            android:src="@drawable/ic_star_border" />
    </LinearLayout>

    <!-- From row with profile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profileCircle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/profile_mail_pic"
            android:contentDescription="@string/profile_image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_mail" />

        <!-- Text block: From + time + dropdown -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- From + Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/view_mail_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sender Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/view_mail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="13:47"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Dropdown icon -->
            <ImageView
                android:id="@+id/dropdown_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="start"
                android:src="@drawable/ic_drop_down_details"
                android:contentDescription="Show details" />
        </LinearLayout>
    </LinearLayout>

    <!-- Dropdown details (outside row!) -->
    <LinearLayout
        android:id="@+id/mail_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/mail_details_border">

        <TextView
            android:id="@+id/detail_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: example@example.com"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detail_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To: user@example.com"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 25 Jun 2025, 20:41"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/view_mail_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="Body text of the email..."
            android:textSize="16sp" />
    </ScrollView>
</LinearLayout>
