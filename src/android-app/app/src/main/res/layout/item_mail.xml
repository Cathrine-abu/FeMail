<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <FrameLayout
        android:id="@+id/profile_container"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp">

        <ImageView
            android:id="@+id/profile_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_profile_selector"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:contentDescription="Profile image"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/check_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:background="@drawable/circle_background"
            android:contentDescription="Selected check"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_mail_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="someone"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_mail_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject here"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/item_mail_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short body content..."
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/item_mail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13:47"
            android:textSize="11sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/item_mail_spam"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_spam"
                android:contentDescription="Spam"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_mail_star"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star_border"
                android:contentDescription="Star" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
